{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./",
        "baseUrl": "./packages",
        "lib": [
            "es2018",
            "dom",
            "dom.iterable"
        ],
        "paths": {
            "@songhay/*": [
                "./*/src"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "downlevelIteration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": false,
        "inlineSources": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/*.ts"
    ],
    "exclude": [],
    "references": [
        {
            "path": "packages/mocha-getting-started/__tests__"
        },
    ]
}